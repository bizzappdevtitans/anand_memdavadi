<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="action_electronic_management_product_brand"
            model="ir.actions.act_window">
            <field name="name">Product Brands</field>
            <field name="res_model">product.brand</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create Product Brand
                </p>
            </field>
    </record>

    <record id="view_electronic_management_product_brand_tree" model="ir.ui.view">
            <field name="name">product.brand.tree</field>
            <field name="model">product.brand</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="brand_image" widget="image" options="{'size': [50, 70]}"/>
                    <field name="brand_name"/>
                    <field name="product_details" string="No. of products"/>
                </tree>
            </field>
    </record>

    <record id="view_electronic_management_product_brand_form" model="ir.ui.view">
        <field name="name">product.brand.form</field>
        <field name="model">product.brand</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_brand_sale" type="object"
                            class="oe_stat_button" icon="fa-dollar">
                            <div class="o_stat_info">
                                <field name="brand_sale"/>
                                <span class="o_stat_text">Sales</span>
                            </div>
                        </button>
                    </div>
                    <field name="brand_image" widget="image" class="oe_avatar" options="{'size': [150, 200]}"/>
                    <group>
                        <field name="brand_name"/>
                        <field name="brand_desc"/>
                    </group>
                    <notebook>
                        <page string="Product Details">
                            <group>
                                <field name="product_details" widget="one2many_tags"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_electronic_management_product_brand_kanban" model="ir.ui.view">
        <field name="name">product.brand.kanban</field>
        <field name="model">product.brand</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="brand_name" />
                <field name="brand_image" />
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                                <div class="o_kanban_image mr-1">
                                    <img t-att-src="kanban_image('product.brand', 'brand_image', record.id.raw_value)" alt="Product" class="o_image_64_contain"/>
                                </div>

                                <div class="oe_kanban_details">
                                    <div class="o_kanban_record_top mb-0">
                                        <div class="o_kanban_record_headings">
                                            <strong class="o_kanban_record_title">
                                                <field name="brand_name"/>
                                            </strong>
                                        </div>
                                    </div>
                                 </div>
                            </div>
                        </t>
                    </templates>
            </kanban>
        </field>
    </record>
</odoo>
