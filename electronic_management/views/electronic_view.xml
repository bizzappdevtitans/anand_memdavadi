<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="action_electronic_management"
            model="ir.actions.act_window">
            <field name="name">Electronic Management</field>
            <field name="res_model">electronic.management</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create Electronic Record
                </p>
            </field>
    </record>

    <record id="view_electronic_management_branch_tree" model="ir.ui.view">
            <field name="name">electronic.management.tree</field>
            <field name="model">electronic.management</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="branch_no"/>
                    <field name="branch_name"/>
                </tree>
            </field>
    </record>

    <record id="view_electronic_management_branch_form" model="ir.ui.view">
        <field name="name">electronic.management.form</field>
        <field name="model">electronic.management</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="get_sales" type="object"
                            class="oe_stat_button" icon="fa-trophy">
                            <div class="o_stat_info">
                                <field name="sale_count" class="o_stat_values"/>
                                <span class="o_stat_text">Sale</span>
                            </div>
                        </button>
                    </div>
                    <div class = "oe_title">
                        <h1>
                            <field name ="branch_no" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                    <field name="branch_name"/>
                    <field name="branch_address"/>
                    </group>
                    <group>
                        <field name="emp">
                            <tree>
                                <field name="emp_name"/>
                                <field name="age"/>
                                <field name="email"/>
                                <field name="address"/>
                            </tree>
                    </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
