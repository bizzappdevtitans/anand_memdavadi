<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="Independence_Day_Mail_Template" model="mail.template">
        <field name="name">Independence_Day_Mail_Template</field>
        <field name="model_id" ref="electronic_management.model_res_partner"></field>
        <field name="subject">Independence Day Sale</field>
        <field name="email_from">{{object.create_uid.email_formatted or ''}}</field>
        <field name="email_to">{{ object.email }}</field>
        <field name="body_html">
            Dear Customer ,
                On the day of Independence Day , there is Grand Sale for various products.
                For best deal, purchase soon !!
                Thank you
        </field>
    </record>

