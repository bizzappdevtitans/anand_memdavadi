<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="employee_card">
        <t t-foreach="docs" t-as="o">
            <t t-call="web.html_container">
                <div class="page">
                    <div class="oe_structure">
                        <div class="row">
                            <div class="col-xs-8">
                                <table class="table table-condensed" style="border:3px solid black !important;">
                                    <tr>
                                        <td width="60%">
                                            <table>
                                                <tr>
                                                    <td colspan="3" class="text-center">
                                                        <span t-field="o.emp_name"/>
                                                    </td>
                                                </tr>

                                                <tr>
                                                    <td>
                                                        <span>
                                                            <strong>Date of Birth</strong>
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <span>:</span>
                                                    </td>
                                                    <td>
                                                        <span t-field="o.dob"/>
                                                    </td>
                                                </tr>

                                                <tr>
                                                    <td>
                                                        <span>
                                                            <strong>Age</strong>
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <span>:</span>
                                                    </td>
                                                    <td>
                                                        <span t-field="o.age"/>
                                                    </td>
                                                </tr>

                                                <tr>
                                                    <td>
                                                        <span>
                                                            <strong>Joining Date</strong>
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <span>:</span>
                                                    </td>
                                                    <td>
                                                        <span t-field="o.joining_date"/>
                                                    </td>
                                                </tr>

                                                <tr>
                                                    <td>
                                                        <span>
                                                            <strong>Contact Number</strong>
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <span>:</span>
                                                    </td>
                                                    <td>
                                                        <span t-field="o.contact_no"/>
                                                    </td>
                                                </tr>

                                                <tr>
                                                    <td>
                                                        <span>
                                                            <strong>Email</strong>
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <span>:</span>
                                                    </td>
                                                    <td>
                                                        <span t-field="o.email"/>
                                                    </td>
                                                </tr>

                                                <tr>
                                                    <td>
                                                        <span>
                                                            <strong>Qualification</strong>
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <span>:</span>
                                                    </td>
                                                    <td>
                                                        <span t-field="o.qualification"/>
                                                    </td>
                                                </tr>

                                                <tr>
                                                    <td>
                                                        <span>
                                                            <strong>Branch</strong>
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <span>:</span>
                                                    </td>
                                                    <td>
                                                        <span t-field="o.branch"/>
                                                    </td>
                                                </tr>

                                                <tr>
                                                    <td>
                                                        <span>
                                                            <strong>Address</strong>
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <span>:</span>
                                                    </td>
                                                    <td>
                                                        <span t-field="o.address"/>
                                                    </td>
                                                </tr>

                                                <tr>
                                                    <td>
                                                        <span>
                                                            <strong>Sale Order Created</strong>
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <span>:</span>
                                                    </td>
                                                    <td>
                                                        <span t-field="o.sale_count"/>
                                                    </td>
                                                </tr>

                                                <tr>
                                                    <td>
                                                        <span>
                                                            <strong>Performance</strong>
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <span>:</span>
                                                    </td>
                                                    <td>
                                                        <span t-field="o.progress"/>
                                                    </td>
                                                </tr>


                                            </table>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>
