<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_service_page">
        <t t-foreach="docs" t-as="o">
            <t t-call="web.html_container">
                <div class="page">
                    <div class="oe_structure">
                        <div class="row">
                            <div class="col-xs-8">
                                <table class="table table-condensed" style="border:3px solid black !important;">
                                    <tr>
                                        <td width="60%">
                                            <table>
                                                <tr>
                                                    <td colspan="3" class="text-center">
                                                        <span t-field="o.invoice"/>
                                                    </td>
                                                </tr>

                                                <tr>
                                                    <td>
                                                        <span>
                                                            <strong>Invoice Date</strong>
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <span>:</span>
                                                    </td>
                                                    <td>
                                                        <span t-field="o.invoice_date"/>
                                                    </td>
                                                </tr>

                                                <tr>
                                                    <td>
                                                        <span>
                                                            <strong>Customer Name</strong>
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <span>:</span>
                                                    </td>
                                                    <td>
                                                        <span t-field="o.customer_name"/>
                                                    </td>
                                                </tr>

                                                <tr>
                                                    <td>
                                                        <span>
                                                            <strong>Product Name</strong>
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <span>:</span>
                                                    </td>
                                                    <td>
                                                        <span t-field="o.product"/>
                                                    </td>
                                                </tr>

                                                <tr>
                                                    <td>
                                                        <span>
                                                            <strong>Contact Number</strong>
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <span>:</span>
                                                    </td>
                                                    <td>
                                                        <span t-field="o.phone"/>
                                                    </td>
                                                </tr>

                                                <tr>
                                                    <td>
                                                        <span>
                                                            <strong>Fault in product</strong>
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <span>:</span>
                                                    </td>
                                                    <td>
                                                        <span t-field="o.fault"/>
                                                    </td>
                                                </tr>

                                                <tr>
                                                    <td>
                                                        <span>
                                                            <strong>Service Date</strong>
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <span>:</span>
                                                    </td>
                                                    <td>
                                                        <span t-field="o.service_date"/>
                                                    </td>
                                                </tr>

                                                <tr>
                                                    <td>
                                                        <span>
                                                            <strong>Pickup Date</strong>
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <span>:</span>
                                                    </td>
                                                    <td>
                                                        <span t-field="o.pickup_date"/>
                                                    </td>
                                                </tr>

                                            </table>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>
