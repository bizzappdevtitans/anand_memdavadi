<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_tree" model="ir.ui.view">
        <field name="name">sale.order.inherited</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree_with_onboarding"/>
        <field name="arch" type="xml">
            <xpath expr = "//field[@name='name']" position="after">
                <field name="no" />
            </xpath>
        </field>
    </record>

  <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.inherited</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr = "//field[@name='sale_order_template_id']" position="after">
                    <field name="no" />
                    <field name="delivery_des"/>
                    <field name="des" />
                    <field name="project_des"/>
                    <field name="purchase_order_des"/>
                    <field name="manu_order_des"/>
            </xpath>

            <xpath expr = "//field[@name='order_line']/tree/field[@name='product_id']" position="after">
                <field name="weight" />
                <field name="product_weight" attrs="{'readonly': [('weight','=','False')]}"/>
            </xpath>
        </field>
    </record>

    <record id="view_invoice_form" model="ir.ui.view">
        <field name="name">account.move.inherited</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr = "//field[@name='invoice_date']" position="after">
                <field name="invoice_des" />
            </xpath>
        </field>
    </record>

    <record id="view_delivery_form" model="ir.ui.view">
        <field name="name">stock.picking.inherited</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr = "//field[@name='origin']" position="after">
                <field name="sp_des" />
            </xpath>

            <xpath expr = "//field[@name='move_ids_without_package']/tree/field[@name='date_deadline']" position="after">
                <field name="product_weight"/>
            </xpath>
        </field>
    </record>

    <record id="view_project_form" model="ir.ui.view">
        <field name="name">project.project.inherited</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <xpath expr = "//form//sheet//group//group[2]//field[@name='user_id']"
                position="after">
                <field name="pro_des" />
            </xpath>
        </field>
    </record>

    <record id="view_task_form" model="ir.ui.view">
        <field name="name">project.task.inherited</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <xpath expr = "//form//sheet//group//group[1]//field[@name='parent_id']"
                position="after">
                <field name="task_des" />
            </xpath>
        </field>
    </record>

    <record id="view_product_form" model="ir.ui.view">
        <field name="name">product.product.inherited</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr = "//form//sheet//div//span[@class='d-inline-block']"
                position="after">
                <span class="d-inline-block">
                    <field name="weight"/>
                    <label for="weight"/>
                </span>
            </xpath>
        </field>
    </record>

    <record id="view_purchase_order_form" model="ir.ui.view">
        <field name="name">purchase.order.inherited</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr = "//form//sheet//group//group[1]//field[@name='currency_id']"
                position="after">
                <field name="purchase_des" />
            </xpath>
        </field>
    </record>

    <record id="view_manufacturing_order_form" model="ir.ui.view">
        <field name="name">mrp.production.inherited</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <xpath expr = "//form//sheet//group//group[1]//field[@name='product_id']"
                position="after">
                <field name="mrp_des" />
            </xpath>
        </field>
    </record>

    <record id="view_stock_picking_type_form" model="ir.ui.view">
        <field name="name">stock.picking.type.inherited</field>
        <field name="model">stock.picking.type</field>
        <field name="inherit_id" ref="stock.view_picking_type_form"/>
        <field name="arch" type="xml">
             <xpath expr = "//form//sheet//group//group[1]//field[@name='name']"
                position="after">
                <field name="auto_invoice" />
            </xpath>
        </field>
    </record>

</odoo>
