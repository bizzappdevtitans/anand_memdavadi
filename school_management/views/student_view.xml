<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="action_school_student"
            model="ir.actions.act_window">
            <field name="name">Student</field>
            <field name="res_model">school.student</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create student record
                </p>
            </field>
    </record>

    <record id="view_school_student_tree" model="ir.ui.view">
        <field name="name">school.student.tree</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
        <tree multi_edit='1'>
            <field name="is_favorite" widget="boolean_favorite" nolabel="1"/>
            <field name="name" string="Student Name"/>
            <field name="school"/>
            <field name="gender"/>
            <field name="joining_date"/>
            <field name="hobby"/>
            <field name="standard"/>
        </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="open_transport">
        <field name="name">Transportation Service</field>
        <field name="res_model">school.transport</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <record model="ir.actions.act_window" id="open_result">
        <field name="name">Result</field>
        <field name="res_model">school.result</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <record id="student_form_details_view" model="ir.ui.view">
        <field name="name">school.student.detail.form</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
        <form>
            <sheet>
                <div class = "oe_title">
                    <h1>
                        <field name = "reference_no" readonly="1"/>
                    </h1>
                </div>
                <div class="oe_button_box" name="button_box">
                    <button name="%(open_transport)d"
                        type="action" class="oe_stat_button" icon="fa-car">
                        <span class="o_stat_text">Transportation Service</span>
                    </button>
                     <button name="%(open_result)d"
                        type="action" class="oe_stat_button" icon="fa-print">
                        <span class="o_stat_text">Result</span>
                    </button>
                </div>
                <widget name="web_ribbon" text="Student" bg_color="bg-danger"/>
                <field name="image" widget="image" class="oe_avatar" options="{'size': [300, 200]}"/>
                <group>

                    <group>
                        <field name="name" widget="text"/>
                        <field name="age"/>
                        <field name="gender" widget="selection_badge"/>
                        <field name="standard"/>
                        <field name="course" widget="selection_badge"/>
                        <field name="mentor"/>
                        <field name="school" widget="selection"/>
                        <field name="id"/>
                        <field name="active" widget="boolean_button"/>
                    </group>

                    <group>
                        <field name="listening" widget="priority"/>
                        <field name="reading" widget="priority"/>
                        <field name="writing" widget="priority"/>
                        <field name="speaking" widget="priority"/>
                    </group>

                    <group>
                        <field name="dob"/>
                        <field name="student_blood_group"/>
                        <field name="joining_date" widget="remaining_days"/>
                        <field name="hobby" widget="char_emojis,text"/>
                    </group>

                </group>
                <group>
                    <field name="info" placeholder="Give information about student" string="Student Information" options="{'collaborative':true , 'resizable':true}"/>
                </group>
                <notebook string="N1">
                    <page string="Academic Record">
                        <group>
                            <field name="maths_marks"/>
                            <field name="english_marks"/>
                            <field name="science_marks"/>
                        </group>
                    </page>
                </notebook>

            </sheet>
            <div class="oe_chatter">
                <field name="message_follower_ids" groups="base.group_user"/>
                <field name="activity_ids"/>
                <field name="message_ids"/>
            </div>
        </form>
        </field>
    </record>

    <record id="view_school_student_search" model="ir.ui.view">
        <field name="name">school.student.search</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
        <search>
            <field name="name" string="Student Name" filter_domain="['|',('name','ilike',self),('age','ilike',self)]"/>
            <field name="age"/>
            <field name="gender"/>
            <field name="course"/>
            <field name="gender"/>
            <field name="dob"/>
            <field name="school"/>
            <field name="standard"/>
            <field name="student_blood_group"/>
            <field name="joining_date"/>
            <filter name="std_10" string="10th standard" domain="[('standard','=','10')]"/>
            <filter name="O+ve" string="O positive" domain="[('student_blood_group','=','O+')]"/>
            <filter name="A+ve" string="A positive" domain="[('student_blood_group','=','A+')]"/>
            <filter name="B+ve" string="B positive" domain="[('student_blood_group','=','B+')]"/>
            <filter name="AB+ve" string="AB positive" domain="[('student_blood_group','=','AB+')]"/>
            <filter string="Archieved" name="inactive"
                domain="[('active', '=',False)]"/>

            <group expand="0" string="Group by">
                <filter string="standard" name="group_by_standard"
                        context="{'group_by':'standard'}"/>
            </group>
            <group expand="0" string="Group by">
                <filter string="gender" name="group_by_gender"
                        context="{'group_by':'gender'}"/>
            </group>
            <searchpanel>
                <field name="school" string="School"
                    enable_counters="2" icon="fa-users"/>
            </searchpanel>
        </search>
    </field>
    </record>


    <record id="view_school_student_kanban" model="ir.ui.view">
        <field name="name">school.student.kanban</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name" />
                <field name="age"/>
                <field name="gender" />
                <field name="standard"/>
                <field name="course" />
                <field name="mentor"/>
                <field name="school"/>
                <field name="dob"/>
                <field name="student_blood_group"/>
                <field name="joining_date"/>
                <field name="hobby" />
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="oe_kanban_details">
                                    <ol>
                                       <li><field name="name" /></li>
                                       <li><field name="age"/></li>
                                       <li><field name="gender" /></li>
                                       <li><field name="standard"/></li>
                                       <li><field name="course" /></li>
                                       <li><field name="mentor"/></li>
                                       <li><field name="school"/></li>
                                       <li><field name="dob"/></li>
                                       <li><field name="student_blood_group"/></li>
                                       <li><field name="joining_date"/></li>
                                       <li><field name="hobby" /></li>
                                    </ol>
                                </div>
                            </div>
                        </t>
                    </templates>
            </kanban>
        </field>
    </record>
</odoo>
