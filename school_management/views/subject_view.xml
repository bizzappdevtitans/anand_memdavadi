<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

   <menuitem id="school_management_menu_subject"
         name="Subjects"
         parent="school_management_root"
         action="action_school_subject"
         groups="group_school_student,group_school_teacher"
         sequence="4"/>

    <record id="action_school_subject"
            model="ir.actions.act_window">
            <field name="name">Subjects</field>
            <field name="res_model">school.subject</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create subject record
                </p>
            </field>
    </record>

    <record id="view_subject_tree" model="ir.ui.view">
        <field name="name">school.subject.tree</field>
        <field name="model">school.subject</field>
        <field name="arch" type="xml">
        <tree>
            <field name="name"/>
            <field name="code"/>
            <field name="course"/>
        </tree>
        </field>
    </record>
</odoo>
