<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_view_school_wizard" model="ir.actions.act_window">
        <field name="name">Create Wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">school.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="school_management.student_form_wizard"/>
        <field name="target">new</field>
    </record>

    <record id="student_form_wizard" model="ir.ui.view">
        <field name="name">School Student Details Form</field>
        <field name="model">school.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <widget name="web_ribbon" text="Student" bg_color="bg-danger"/>
                    <field name="image" widget="image" class="oe_avatar" options="{'size': [300, 200]}"/>
                    <group>
                        <group>
                            <field name="name" widget="text"/>
                            <field name="age"/>
                            <field name="gender" widget="selection_badge"/>
                            <field name="standard"/>
                            <field name="school"/>
                         </group>
                         <group>
                            <field name="listening" widget="priority"/>
                            <field name="reading" widget="priority"/>
                            <field name="writing" widget="priority"/>
                            <field name="speaking" widget="priority"/>
                        </group>
                        <group>
                            <field name="dob"/>
                            <field name="student_blood_group"/>
                            <field name="joining_date" widget="remaining_days"/>
                            <field name="hobby" widget="char_emojis,text"/>
                        </group>
                            <field name="info"/>
                    </group>
                    <notebook>
                        <page string="Academic Record">
                            <group>
                                <field name="maths_marks"/>
                                <field name="english_marks"/>
                                <field name="science_marks"/>
                            </group>
                        </page>
                    </notebook>
                    <footer>
                        <button name="action_create_student_record" type="object" string="Create Student" class="btn-primary"/>
                        <button name="action_view_teacher_tree" type="object" string="View Teachers" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
