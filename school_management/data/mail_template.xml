<?xml version="1.0" encoding="UTF-8"?>
<odoo>
     <data noupdate="1">
        <record id="student_birthday_email_template" model="mail.template">
            <field name="name">Birthday Wishes: Send by email</field>
            <field name="model_id" ref="school_management.model_school_student"/>
            <field name="email_from">{{ (object.user_id.email_formatted) }}</field>
            <field name="email_to">{{ object.email}}</field>
            <field name="subject">Birthday Wishes (Ref {{object.name}})</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Dear ${{object.name}}
                        <br /><br />
                            Wishing you many many happy returns of the day
                        <br /><br />
                        Do not hesitate to contact us if you have any questions:)
                    </p>
                </div>
            </field>
            <!-- <field name="report_template" ref="account_invoices"/>
            <field name="report_name">Invoice_{{ (object.name or '').replace('/','_') }}{{ object.state == 'draft' and '_draft' or '' }}</field> -->
        </record>
    </data>
</odoo>
